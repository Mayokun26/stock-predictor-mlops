{
  "dashboard": {
    "id": null,
    "title": "Model Performance Monitoring",
    "tags": ["model", "ml", "performance"],
    "style": "dark",
    "timezone": "browser", 
    "panels": [
      {
        "id": 1,
        "title": "Model Accuracy by Symbol",
        "type": "timeseries",
        "targets": [
          {
            "expr": "model_accuracy",
            "legendFormat": "{{symbol}} - {{model_version}}"
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        }
      },
      {
        "id": 2,
        "title": "Prediction Confidence Distribution",
        "type": "histogram",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, prediction_confidence_bucket)",
            "legendFormat": "50th percentile"
          },
          {
            "expr": "histogram_quantile(0.95, prediction_confidence_bucket)", 
            "legendFormat": "95th percentile"
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Model Drift Detection",
        "type": "timeseries",
        "targets": [
          {
            "expr": "prediction_drift_score",
            "legendFormat": "Drift Score - {{symbol}}"
          }
        ],
        "gridPos": {"h": 9, "w": 24, "x": 0, "y": 9},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 0.2}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Feature Importance Heat Map",
        "type": "heatmap",
        "targets": [
          {
            "expr": "feature_importance_score",
            "legendFormat": "{{feature_name}}"
          }
        ],
        "gridPos": {"h": 9, "w": 24, "x": 0, "y": 18}
      }
    ],
    "time": {"from": "now-6h", "to": "now"},
    "refresh": "30s"
  }
}